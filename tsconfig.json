{
  "extends": "@tsconfig/node23/tsconfig.json",
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "ES2022",
  },
  "exclude": [
    "tests/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
